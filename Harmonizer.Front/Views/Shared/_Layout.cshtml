@using BlueInt32.Mvc
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" ng-app="app">
<head>
	<title>Harmonizer</title>

	@if (Request.IsLocal)
	{
		<link rel="stylesheet" type="text/css" href="~/css/compiled/complete.css">
	}
	else
	{
		<link rel="stylesheet" type="text/css" href="~/css/compiled/complete.min.css">
	}
	<link rel="icon" type="image/png" href="~/images/favicon.png" />
</head>
<body ng-controller="mainController">
	<div id="topbar"></div>
	<div id="container">
		<section id="header">
			<h1>Harmonizer</h1>
			<ul id="menu">
				<li><a href="#">Save</a></li>
				<li><a href="#">Share</a></li>
				<li><a href="#">Load Examples</a></li>
			</ul>
		</section>
		@RenderBody()
		@if (Request.IsLocal)
		{
			<script src="~/js/vendor/angular.js"></script>
			<script src="~/js/vendor/howler.js"></script>
			
			<script src="~/js/app.js"></script>
			<script src="~/js/config.js"></script>
			<script src="~/js/factories/chordFactory.js"></script>
			<script src="~/js/factories/configFactory.js"></script>
			<script src="~/js/factories/soundFactory.js"></script>
			<script src="~/js/directives/chordBlockDirective.js"></script>
			<script src="~/js/directives/wheelSelect.js"></script>
			<script src="~/js/controllers/mainController.js"></script>
		}
		else
		{
			<script src="~/js/min.js"></script>
		}


</div>
</body>
</html>